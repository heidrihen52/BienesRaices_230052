extends ../layout/index 
block contenido 
    .py-10
        h1.text-center.text-4xl.my-10.font-extrabold.text-center.text-green Bienes
            span.font-normal.text-orange Raices
        h2.text-center.text-2xl.font-extrabold Inicia Sesión 
    div(class="bg-white shadow py-8 px-4 rounded-lg max-w-md mx-auto")    
        p(class= error ?'bg-red' : 'bg-green'  ).py-2.px-5.rounded-lg.w-full.font-bold.text-center.text-white.uppercase= msg
        if error
            a(href="http://localhost:3000/usuario/passwordRecovery" class="text-center font-bold text-sm text-blue uppercase mt-10 block ")  
        if !error
            a(href="http://localhost:3000/usuario/login" class="text-center font-bold text-sm text-blue uppercase mt-10 block ") Ya puedes iniciar sesión 