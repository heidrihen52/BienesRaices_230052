extends ../layout/index 
block contenido 
    div.py-10
        h1.text-center.text-4xl.my-10.font-extrabold.text-center.text-green-800 Bienes 
            span.font-normal.text-orange-600 Raices
        h2.text-center.text-2xl.font-extrabold Crea una cuenta 
        .mt-8.mx-auto.max-w-md
            .bg-white.pv-8.px-4.shadow
                form(action="").space-y-5.px-6
                    div 
                        label.block.text-sm.uppercase.text-gray-600.mb-3.font-bold(for="nombre_usuario") Tu Nombre 
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400( type="text" placeholder="INgresa tu nombre con apellidos" nombre="nombre_usuario")
                    div 
                        label.block.text-sm.uppercase.text-gray-600.mb-3.font-bold Correo:
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder.gray-400( type="email" placeholder="ej: usuario@dominio.com" name="correo_usuario")
                    div 
                        label.block.text-sm.uppercase.text-gray-600.mb-3.font-bold Contraseña: 
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder.gray-400( type="password" placeholder="minimo de 8 caracteres" name="pass_usuario")
                    div 
                        label.block.text-sm.uppercase.text-gray-600.mb-3.font-bold Confirmación: 
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder.gray-400( type="password" placeholder="minimo de 8 caracteres, igual a la anterior" name="pass2_usuario")
                    .flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="./login"  class="hover:underline hover:decoration-2 hover:decoration-red-600") ¿Ya tienes cuenta? Inicia sesión
                        a.text-gray-500.text-xs(href="./passwordRecovery"  class="hover:underline hover:decoration-2 hover:decoration-red-600") Olvidé mi contraseña 
                    input(class="w-full bg-orange-600 hover:bg-green-600 text-white font-bold py-3 cursor-pointer" type="submit" value="Crear Cuenta")
                        